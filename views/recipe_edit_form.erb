<h1>Update Recipe: <%= @recipe.recipe() %></h1>

<div class="container">

  <form action="/recipe/<%= @recipe.id() %>" method="post">
    <input type="hidden" name="_method" value="patch">
    <div class="form-group">
      <label for="new_recipe">Recipe Name:</label>
      <input type="new_recipe" name="new_recipe">
    </div>
    <div class="form-group">
      <label for="ingredients">Ingredients:</label>
      <input type="ingredients" name="ingredients">
    </div>
    <div class="form-group">
      <label for="instructions">Directions:</label>
      <input type="instructions" name="instructions">
    </div>
    <button type="submit">Add Recipe</button>
  </form>

</div>
